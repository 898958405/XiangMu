<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#3db1a8">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="完善个人信息"
            android:textSize="19dp"
            android:textColor="#fff"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="0dp"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="真实姓名"
            android:numeric = "integer"
            android:maxLength="11"
            android:inputType="text"
            android:textColorHint="#8E8C8C"
            android:id="@+id/xxtx_name"
            android:paddingBottom="10dp"
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/name"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="性别"
            android:numeric = "integer"
            android:maxLength="11"
            android:inputType="text"
            android:textColorHint="#8E8C8C"
            android:id="@+id/xxtx_sex"
            android:paddingBottom="10dp"
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/sex"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="年龄"
            android:inputType="number"
            android:id="@+id/xxtx_age"
            android:textColorHint="#8E8C8C"
            android:paddingBottom="10dp"
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/age"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="身份证号"
            android:inputType="number"
            android:id="@+id/xxtx_Id_card"
            android:textColorHint="#8E8C8C"
            android:paddingBottom="10dp"
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/id_card"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="地址"
            android:inputType="text"
            android:id="@+id/xxtx_address"
            android:textColorHint="#8E8C8C"
            android:paddingBottom="10dp"
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/address"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="紧急呼救：填写紧急呼救联系人电话"
            android:inputType="phone"
            android:id="@+id/xxtx_jijiu"
            android:textColorHint="#8E8C8C"
            android:paddingBottom="10dp"
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/a_mibao" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/b_xiaohudu_anniu"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="确认"
            android:id="@+id/xxtx_queren"
            android:textSize="18dp"
            android:textColor="#fff"/>
    </LinearLayout>
</LinearLayout>