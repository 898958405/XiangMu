<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f3f8"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#3db1a8">
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:layout_marginLeft="5dp"
            android:textColor="#fff"
            android:id="@+id/dl_fanhui"
            android:background="@mipmap/zuoyi"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="登录"
            android:textSize="19dp"
            android:textColor="#fff"/>
    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="410dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="227dp"
            android:layout_gravity="top"
            android:orientation="vertical"
            android:gravity="top">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/a_yanglaozhuanjia"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_margin="30dp"
            android:background="@drawable/a_xiaohudu_beijing">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/a_tubiaowenzi"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="35dp"
                android:paddingRight="35dp"
                android:orientation="vertical">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:hint="请输入手机号"
                    android:maxLength="11"
                    android:inputType="phone"
                    android:textColorHint="#8E8C8C"
                    android:id="@+id/dl_shoujihao"
                    android:paddingBottom="10dp"
                    android:drawablePadding="20dp"
                    android:drawableLeft="@drawable/a_shoujihao"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:id="@+id/dl_mima"
                    android:textColorHint="#8E8C8C"
                    android:paddingBottom="10dp"
                    android:drawablePadding="20dp"
                    android:drawableLeft="@drawable/a_mima"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="35dp"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="忘记密码"
                        android:textColor="#73c2bb"
                        android:paddingRight="15dp"
                        android:id="@+id/dl_wangjimima"
                        android:textSize="16dp"
                        android:background="#00FFFFFF"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="注册"
                        android:layout_alignParentRight="true"
                        android:paddingLeft="40dp"
                        android:id="@+id/dl_zhuce"
                        android:textColor="#73c2bb"
                        android:textSize="16dp"
                        android:background="#00FFFFFF"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/a_dahudu_anniu"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:text="登录"
            android:id="@+id/dl_denglu"
            android:textSize="18dp"
            android:textColor="#fff"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dl_danxuankuang"
            android:checked="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="同意"
            android:textSize="15dp"
            android:id="@+id/tongyi"
            android:paddingBottom="7dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《用户协议》"
            android:textSize="15dp"
            android:textColor="#6eb8b2"
            android:id="@+id/yonghuxieyi"
            android:paddingBottom="7dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:textSize="15dp"
            android:id="@+id/shugang"
            android:paddingBottom="7dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《隐私协议》"
            android:textSize="15dp"
            android:textColor="#6eb8b2"
            android:paddingBottom="7dp"/>
    </LinearLayout>
</LinearLayout>