<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:padding="0dp"
    android:layout_margin="0dp"
    android:background="#00000000"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d1d1d1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/shouye_ll"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/shouye_ib"
                android:layout_marginTop="5dp"
                android:src="@mipmap/shuoye_lv"
                android:background="#00000000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#81868E"
                android:textSize="9sp"
                android:id="@+id/shouye_tv"
                android:layout_marginTop="3dp"
                android:textStyle="bold"
                android:text="首页"/>
        </LinearLayout>
        <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/yuyue_ll"
                    android:orientation="vertical"
                    android:background="#00FFFFFF"
                    android:gravity="center">

                    <ImageButton
                        android:layout_width="80dp"
                        android:layout_height="49dp"
                        android:id="@+id/yuyue_ib"
                        android:src="@mipmap/tianjia"
                        android:background="#00000000"/>
                </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/wode_ll"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/wode_ib"
                android:layout_marginTop="5dp"
                android:src="@mipmap/wode_lv"
                android:background="#00000000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#81868E"
                android:textSize="9sp"
                android:id="@+id/wode_tv"
                android:layout_marginTop="3dp"
                android:textStyle="bold"
                android:text="我的"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
